<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/background_dark"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imgview_item_launch"
            android:layout_width="90dp"
            android:layout_height="120dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/subtitle_mission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="M i s s i o n"
            android:textColor="@android:color/background_light"
            android:textSize="10sp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/imgview_item_launch"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_mission_item_launch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/background_light"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/imgview_item_launch"
            app:layout_constraintTop_toBottomOf="@id/subtitle_mission"
            tools:text="test" />

        <TextView
            android:id="@+id/subtitle_launch_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"
            android:text="Launch Year"
            android:textColor="@android:color/background_light"
            android:textSize="10sp"
            app:layout_constraintStart_toEndOf="@id/imgview_item_launch"
            app:layout_constraintTop_toBottomOf="@id/txt_mission_item_launch" />

        <TextView
            android:id="@+id/txt_year_item_launch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:textColor="@android:color/background_light"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@id/subtitle_launch_year"
            app:layout_constraintStart_toStartOf="@id/subtitle_launch_year"
            app:layout_constraintTop_toBottomOf="@id/subtitle_launch_year"
            tools:text="2006" />

        <TextView
            android:id="@+id/subtitle_rocket_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="6dp"
            android:text="Rocket Name"
            android:textColor="@android:color/background_light"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_mission_item_launch" />

        <TextView
            android:id="@+id/txt_rocketname_item_launch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:textColor="@android:color/background_light"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@id/subtitle_rocket_name"
            app:layout_constraintStart_toStartOf="@id/subtitle_rocket_name"
            app:layout_constraintTop_toBottomOf="@id/subtitle_rocket_name"
            tools:text="2006" />

        <TextView
            android:id="@+id/txt_detail_item_launch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="6dp"
            android:textColor="@android:color/background_light"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/imgview_item_launch"
            app:layout_constraintTop_toBottomOf="@id/txt_year_item_launch"
            tools:text="Launch launch launch launch launch launch launch launch" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>